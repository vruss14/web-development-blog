<div class="w-100 d-flex justify-content-center">
    <img src="https://picsum.photos/id/201/1800/360?grayscale" alt="Stock technology image">
</div>

<div id="form-wrapper">

    <div class="d-flex">

        <section class="w-100 row justify-content-center">

            <div class="col-10 col-md-6 col-lg-5">

                <form class="bg-white my-4 p-4 rounded">
                    <h1 class="display-1 text-primary text-center mb-5">Sign Up</h1>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username-input" class="form-control" placeholder="Create a unique username..."
                            required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email-input" class="form-control" placeholder="Enter your email address..."
                            required />
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password-input" class="form-control"
                            placeholder="Enter a strong password..." required />
                        <small id="passwordHelp" class="form-text text-muted">Need a secure password? Click 
                            <a href = "https://vruss14.github.io/secure-password-generator/" target = "_blank">HERE</a> 
                            to use a password generator that will customize a password based on your preferences.</small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="button" id = "signup-btn" class="btn btn-primary mt-3 custom-btns">Sign Up</button>
                        <button type="button" class="btn btn-primary mt-3 custom-btns" onclick= "window.location = '/login'">Log In</button>
                    </div>

                </form>
            </div>
        </section>

    </div>

</div>

<script src = "../js/signup.js"></script>
